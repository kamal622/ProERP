@model  ProERP.Web.Models.SiteViewModel


    <div class="form-group">
        <div class="col-md-3">
            <div class="label-wrapper">
                <label title="" class="control-label" >Site Name</label>
                <div title="A site name" class="ico-help" area-describedby="">
                    <i class="fa fa-question-circle"></i>
                </div>
            </div>
        </div>
        <div class="col-md-9">
            @Html.HiddenFor(m=>m.Id)
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control", style = "width:300px;" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-3">
            <div class="label-wrapper">
                <label title="" class="control-label" >Location</label>
                <div title="site location" class="ico-help" area-describedby="">
                    <i class="fa fa-question-circle"></i>
                </div>
            </div>
        </div>
        <div class="col-md-9">
            @Html.TextAreaFor(m => m.Address, new { @rows = 5, @class = "form-control", style = "width:300px;" })


        </div>
    </div>

    <div class="form-group">
        <div class="col-md-3">
            <div class="label-wrapper">
                <label title="" class="control-label" >InCharge</label>
                <div title="site incharge" class="ico-help" area-describedby="">
                    <i class="fa fa-question-circle"></i>
                </div>
            </div>
        </div>
        <div class="col-md-9">
            @Html.TextBoxFor(m => m.InCharge, new { @class = "form-control", style = "width:300px;" })


        </div>
    </div>

    <div class="form-group">
        <div class="col-md-3">
            <div class="label-wrapper">
                <label title="" class="control-label" >Description</label>
                <div title="site description" class="ico-help" area-describedby="">
                    <i class="fa fa-question-circle"></i>
                </div>
            </div>
        </div>
        <div class="col-md-9">

            @Html.TextAreaFor(m => m.Description, new { @rows = 5, @class = "form-control", style = "width:300px;" })


        </div>
    </div>


