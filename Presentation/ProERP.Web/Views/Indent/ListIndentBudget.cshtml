
@model  ProERP.Web.Models.IndentBudgetViewModel
@using ProERP.Web.Framework.UI;

@{
    ViewBag.Title = "ListIndentBudget";
    Layout = "~/Views/Shared/_Layout.cshtml";
    Html.SetActiveMenuItemSystemName("IndentBudget");
}

<div ng-controller="ListController">
    <div class="content-header clearfix">
        <h1 class="pull-left">Indent Budget</h1>
        <div class="pull-right">
            <a class="btn bg-blue" href="/Indent/AddIndentBudget/">
                <i class="fa fa-plus-square"></i>
                Add New
            </a>
            <button class="btn bg-red" ng-click="onDelete(event)">
                <i class="fa fa-trash-o"></i>
                Delete (selected)
            </button>
        </div>
    </div>
    <div class="content">
        <div class="form-horizontal">
            <div class="row">
                <div class="col-md-12">
                    <div class="box box-primary">
                        <div class="box-header with-border">
                            <h3 class="box-title">Search</h3>
                            <div class="box-tools pull-right">
                                <button type="button" class="btn btn-box-tool" data-widget="collapse">
                                    <i class="fa fa-minus"></i>
                                </button>
                            </div>
                            <!-- /.box-tools -->
                        </div>
                        <div class="box-body" style="width: 100%; height: 100%;">
                            <!-- Main content -->
                            <div class="row">
                                <div class="col-md-5">
                                    <div class="form-group">
                                        <div class="col-md-5">
                                            <div class="label-wrapper">
                                                <label title="" class="control-label">Budget Type</label>
                                                <div title="A item name" class="ico-help" area-describedby="">
                                                    <i class="fa fa-question-circle"></i>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-7">
                                            <input name="SearchBudgetType" ng-model="SearchBudgetType" class="form-control text-box single-line" id="SearchBudgetType" type="text" value="" width="100" />
                                        </div>
                                    </div>
                                    <div class="col-md-7">
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-5">
                                    <div class="form-group">
                                        <div class="col-md-5">

                                        </div>
                                        <div class="col-md-7">
                                            <button class="btn btn-primary btn-search" id="searchPM" type="button" ng-click="onSearch(event)">
                                                <i class="fa fa-search"></i>
                                                Search
                                            </button>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-7">

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="pull-right pad">
                        <button id="btnRefresh" class="btn bg-blue" type="button" ng-click="onRefreshClick(event)">
                            <i class="fa fa-refresh"></i>
                            Refresh
                        </button>
                    </div>
                    <jqx-grid jqx-altrows="true" jqx-width="'100%'" jqx-sortable="true" jqx-pageable="true"
                              jqx-pagesize="10" jqx-pagesizeoptions="GridPageSizeOption" jqx-theme="theme"
                              jqx-source="IndentBudgetSource" jqx-instance="BudgetGrid" jqx-selection-mode="checkbox"
                              jqx-columns="[
                                              { text: 'Budget Type', datafield: 'BudgetType' },
                                              { text: 'Budget Code', datafield: 'BudgetCode' },
                                              { text: 'Financial Year', datafield: 'FinancialYear' },
                                              { text: 'Budget Amount', datafield: 'Amount'},
                                              { text: 'Is Active', datafield: 'IsActive', width: 70, cellsrenderer: IsActiveCellsRenderer},
                                              { text: '', width: 70, cellsrenderer: UpdateBudget, sortable: false }]"></jqx-grid>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script type="text/javascript" src="~/js/Indent/List_IndentBudgetController.js"></script>
}