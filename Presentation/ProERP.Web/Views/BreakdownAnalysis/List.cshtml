
@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-header clearfix">
    <h1 class="pull-left">Sites</h1>
    <div class="pull-right">
        <a class="btn bg-blue" href="/BreakDownAnalysis/Add/">
