@using ProERP.Web.Framework.UI;
@model  ProERP.Web.Models.PlantViewModel


@{
    ViewBag.Title = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
    Html.SetActiveMenuItemSystemName("Plants");
}

<div ng-controller="PlantUpdateController">
    @using (Html.BeginForm("UpdatePlant", "Plant", FormMethod.Post, null))
    {
        <div class="content-header clearfix">
            <h1 class="pull-left">
                Update plant
                <small>

                    <i class="fa fa-arrow-circle-left"></i>
                    <a href="/Plant/List/">back to plant list</a>
                </small>
            </h1>
            <div class="pull-right">

                <button class="btn bg-blue">
                    <i class="fa fa-floppy-o"></i>
                    Save
                </button>
            </div>
        </div>

        <div class="content">
            <div class="form-horizontal">
                <div id="customer-edit" class="nav-tabs-custom">
                    <ul class="nav nav-tabs">
                        <li class="active">
                            <a href="#tabDetail" data-toggle="tab" data-tab-name="tabDetail">Plant Detail</a>
                        </li>
                    </ul>
                    <div class="tab-content">
                        <div class="tab-pane active" id="tabDetail">
                            <div class="panel-group">
                                <div class="panel panel-default">
                                    <div class="panel-body">
                                        @Html.Partial("_AddOrUpdatePlant", Model)
                                    </div>
                                </div>
                            </div>
                            </div>
                        </div>
                        </div>
                    </div>
                    
                </div>
    }
                </div>
                @section scripts {
                    <script type="text/javascript" src="~/JS/Plant/UpdateController.js"></script>
                }

