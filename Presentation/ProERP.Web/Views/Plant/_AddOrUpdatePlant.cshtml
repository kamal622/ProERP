
@model  ProERP.Web.Models.PlantViewModel


<div class="form-group">
    <div class="col-md-3">
        <div class="label-wrapper">
            <label title="" class="control-label">Site</label>
            <div title="select site " class="ico-help" area-describedby="">
                <i class="fa fa-question-circle"></i>
            </div>
        </div>
    </div>
    <div class="col-md-9">
        @Html.DropDownListFor(m => m.SiteId, new SelectList(Model.Sites, "Id", "Name"), new { jqx_drop_down_list = "ddlSite", jqx_width = 300, jqx_height = 33, jqx_theme = "theme", id = "ddlSites", jqx_disabled = "DisableSiteList" })
    </div>
</div>

<div class="form-group">
    <div class="col-md-3">
        <div class="label-wrapper">
            <label title="" class="control-label" for="SearchSiteName">Plant Name</label>
            <div title="A plant name" class="ico-help" area-describedby="">
                <i class="fa fa-question-circle"></i>
            </div>
        </div>
    </div>
    <div class="col-md-9">
        @Html.HiddenFor(m => m.Id)
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control", style = "width:300px;" })
    </div>
</div>

<div class="form-group">
    <div class="col-md-3">
        <div class="label-wrapper">
            <label title="" class="control-label">Location</label>
            <div title="plant location" class="ico-help" area-describedby="">
                <i class="fa fa-question-circle"></i>
            </div>
        </div>
    </div>
    <div class="col-md-9">
        @Html.TextAreaFor(m => m.Location, new { @rows = 5, @class = "form-control", style = "width:300px;" })
    </div>
</div>

<div class="form-group">
    <div class="col-md-3">
        <div class="label-wrapper">
            <label title="" class="control-label">InCharge</label>
            <div title="plant incharge" class="ico-help" area-describedby="">
                <i class="fa fa-question-circle"></i>
            </div>
        </div>
    </div>
    <div class="col-md-9">
        @Html.TextBoxFor(m => m.PlantInCharge, new { @class = "form-control", style = "width:300px;" })
    </div>
</div>



