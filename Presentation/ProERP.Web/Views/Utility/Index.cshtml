@using ProERP.Web.Framework.UI;

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    Html.SetActiveMenuItemSystemName("Utility");
}

<div ng-controller="UtilityController">
    <!-- Content Header (Page header) -->
    <section class="content-header  clearfix">
        <h1>
            Utility
            <small>Utility Reports</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">Utility Reports</li>
        </ol>
    </section>
    <div class="content">
        <div class="form-horizontal">
            <div class="row">
                <div class="col-md-12">
                    <div class="box box-primary">
                        <div class="box-header with-border">
                            <h3 class="box-title">Search</h3>
                            <div class="box-tools pull-right">
                                <button type="button" class="btn btn-box-tool" data-widget="collapse">
                                    <i class="fa fa-minus"></i>
                                </button>
                            </div>
                            <!-- /.box-tools -->
                        </div>
                        <div class="box-body" style="width: 100%; height: 100%;">
                            <!-- Main content -->
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <div class="col-md-1">
                                            <div class="label-wrapper">
                                                <label title="" class="control-label" for="SearchSiteName">Report Name</label>
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <jqx-combo-box jqx-instance="ddlReports" jqx-search-mode="'containsignorecase'" jqx-place-holder="'select utility report'"
                                                           jqx-source="ReportsDataSource" jqx-display-member="'Name'" jqx-value-member="'Id'" jqx-width="'100%'" jqx-height="33" jqx-theme="theme"
                                                           jqx-drop-down-height="400" jqx-auto-items-height="true"  jqx-enable-browser-bounds-detection="true"
                                                           jqx-selected-index="-1" jqx-on-change="Report_Select(event)"></jqx-combo-box>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="col-md-3" ng-repeat="item in SearchSource">
                                            <div class="form-group">
                                                <div class="row">
                                                    <div class="col-md-12">
                                                        <div class="col-md-4">
                                                            <div class="label-wrapper">
                                                                <label title="" class="control-label" for="SearchSiteName">{{item.ColumnName}}</label>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-8">
                                                            <jqx-date-time-input ng-show="item.DataType == 'D'" jqx-ng-model jqx-width="'100%'" jqx-height="33" data-id="dtpSearchDate{{item.Id}}"
                                                                                 jqx-selection-mode="'range'" jqx-theme="theme" jqx-created="SearchDateCreated"></jqx-date-time-input>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <div class="col-md-2">

                                        </div>
                                        <div class="col-md-10">
                                            <button class="btn btn-primary btn-search" id="searchSites" type="button" ng-click="onSearchClick()">
                                                <i class="fa fa-search"></i>
                                                Search
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="pull-right pad">
                        <button class="btn bg-" type="button" ng-click="onSearchClick(this)">
                            <i class="fa fa-refresh"></i>
                            Refresh
                        </button>

                        <button class="btn bg-blue" type="button" ng-click="onExportClick(this)">
                            <i class="fa fa-file-excel-o"></i>
                            Export
                        </button>

                        <button class="btn bg-blue" type="button" ng-click="onSaveClick(this)">
                            <i class="fa fa-save"></i>
                            Save
                        </button>

                        @*@if (User.IsInRole("Lavel1") || User.IsInRole("Lavel2"))
                        {
                            <button class="btn bg-red" ng-click="onDeleteClick(this)">
                                <i class="fa fa-trash-o"></i>
                                Delete (selected)
                            </button>
                        }*@
                    </div>

                    <jqx-grid jqx-altrows="true"
                              jqx-instance="grdMain"
                              jqx-width="'100%'"
                              jqx-sortable="true"
                              jqx-theme="theme"
                              jqx-columnsresize="true"
                              jqx-editable="true"
                              jqx-selectionmode="'multiplecellsadvanced'"
                              @*jqx-autorowheight="true"*@
                              jqx-showstatusbar="true"
                              jqx-showaggregates="ShowAggregates"
                              jqx-autoheight="true"
                              jqx-auto-bind="false"
                              jqx-source="GridSource"
                              jqx-columns="BreakdownColumns"
                              jqx-columngroups="BreakdownGroupColumns"
                              jqx-editmode="'click'"
                              id="grdMain"></jqx-grid>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script type="text/javascript" src="~/js/Utility/UtilityController.js"></script>
}