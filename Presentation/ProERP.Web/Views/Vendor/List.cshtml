
@model  ProERP.Web.Models.VendorViewModel
@using ProERP.Web.Framework.UI;

@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
    Html.SetActiveMenuItemSystemName("Vendor");
}

<div ng-controller="VendorController">
    <div class="content-header clearfix">
        <h1 class="pull-left">Vendor</h1>
        <div class="pull-right">
            <a class="btn bg-blue" href="/Vendor/Add/">
                <i class="fa fa-plus-square"></i>
                Add New
            </a>
            <button class="btn bg-red" ng-click="onDelete(event)">
                <i class="fa fa-trash-o"></i>
                Delete (selected)
            </button>
        </div>
    </div>
    <div class="content">
        <div class="form-horizontal">
            <div class="row">
                <div class="col-md-12">
                    <div class="box box-primary">
                        <div class="box-header with-border">
                            <h3 class="box-title">Search</h3>
                            <div class="box-tools pull-right">
                                <button type="button" class="btn btn-box-tool" data-widget="collapse">
                                    <i class="fa fa-minus"></i>
                                </button>
                            </div>
                            <!-- /.box-tools -->
                        </div>
                        <div class="box-body" style="width: 100%; height: 100%;">
                            <!-- Main content -->
                            <div class="row">
                                <div class="col-md-5">
                                    <div class="form-group">
                                        <div class="col-md-5">
                                            <div class="label-wrapper">
                                                <label title="" class="control-label">Vendor Name</label>
                                                <div title="Vendor name" class="ico-help" area-describedby="">
                                                    <i class="fa fa-question-circle"></i>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-7">
                                            <input name="SearchVendorName" ng-model="SearchVendorName" class="form-control text-box single-line" id="SearchVendorName" type="text" value="" width="100" />
                                        </div>
                                    </div>
                                    <div class="col-md-7">
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-5">
                                    <div class="form-group">
                                        <div class="col-md-5">

                                        </div>
                                        <div class="col-md-7">
                                            <button class="btn btn-primary btn-search" id="searchVendor" type="button" ng-click="onSearch(event)">
                                                <i class="fa fa-search"></i>
                                                Search
                                            </button>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-7">

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="pull-right pad">
                        <button id="btnRefresh" class="btn bg-blue" type="button" ng-click="onRefreshClick(event)">
                            <i class="fa fa-refresh"></i>
                            Refresh
                        </button>
                    </div>
                    <jqx-grid jqx-altrows="true" jqx-width="'100%'" jqx-sortable="true" jqx-pageable="true"
                              jqx-pagesize="10" jqx-pagesizeoptions="GridPageSizeOption" jqx-theme="theme"
                              jqx-source="VendorGridSource" jqx-instance="VendorGrid" jqx-selection-mode="checkbox"
                              jqx-columns="[
                                              { text: 'Id', datafield: 'Id', hidden: 'true' },
                                              { text: 'Vendor Name', datafield: 'Name', width: '250' },
                                              { text: 'Address', datafield: 'Address' },
                                              { text: 'Phone Number', datafield: 'PhoneNo', width: '150'},
                                              { text: 'Email', datafield: 'Email', width: '250' },
                                              { text: '', width: 70, cellsrenderer: UpdateVendor, sortable: false }]"></jqx-grid>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script type="text/javascript" src="~/js/Vendor/ListController.js"></script>
}







