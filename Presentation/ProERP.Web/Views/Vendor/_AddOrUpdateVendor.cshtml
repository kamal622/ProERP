@model  ProERP.Web.Models.IndentViewModel
@Html.HiddenFor(m => m.VendorViewModel.Id, new { id = "hdnVendorId" })


<script type="text/javascript" src="~/JS/Vendor/AddOrUpdateController.js"></script>

<div class="form-group">
    <div class="col-md-3">
        <div class="label-wrapper">
            <label title="" class="control-label">Name</label>
            <div title="Vendor Name" class="ico-help" area-describedby="">
                <i class="fa fa-question-circle"></i>
            </div>
        </div>
    </div>
    <div class="col-md-9">
        <jqx-input ng-model="model.Name"
                       jqx-width="300"
                       jqx-height="30"
                       jqx-theme="theme" />
    </div>
</div>

<div class="form-group">
    <div class="col-md-3">
        <div class="label-wrapper">
            <label title="" class="control-label">Address</label>
            <div title="Address" class="ico-help" area-describedby="">
                <i class="fa fa-question-circle"></i>
            </div>
        </div>
    </div>
    <div class="col-md-9">
        <jqx-text-area ng-model="model.Address"
                       jqx-width="300"
                       jqx-height="100"
                       jqx-theme="theme" />
    </div>
</div>

<div class="form-group">
    <div class="col-md-3">
        <div class="label-wrapper">
            <label title="" class="control-label">Phone Number</label>
            <div title="Phone number" class="ico-help" area-describedby="">
                <i class="fa fa-question-circle"></i>
            </div>
        </div>
    </div>
    <div class="col-md-9">
        <jqx-input jqx-height="30"
                          jqx-width="300"
                          jqx-theme="theme"
                          ng-model="model.PhoneNo"></jqx-input>
    </div>
</div>

<div class="form-group">
    <div class="col-md-3">
        <div class="label-wrapper">
            <label title="" class="control-label">Email</label>
            <div title="Email" class="ico-help" area-describedby="">
                <i class="fa fa-question-circle"></i>
            </div>
        </div>
    </div>
    <div class="col-md-9">
        <jqx-input ng-model="model.Email"
                   jqx-width="300"
                   jqx-height="30"
                   jqx-theme="theme" />
    </div>
</div>