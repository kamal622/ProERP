
@model ProERP.Data.Models.Equipment
@{
    ViewBag.Title = "Add a new Equipment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="content-header clearfix">
    <h1 class="pull-left">
        Add a new site
        <small>

            <i class="fa fa-arrow-circle-left"></i>
            <a href="/Equipment/List/">back to equipment list</a>
        </small>
    </h1>
    <div class="pull-right">

        <button class="btn bg-blue">
            <i class="fa fa-floppy-o"></i>
            Save
        </button>
    </div>
</div>

<div class="content">

    <div class="form-horizontal">
        <div id="customer-edit" class="nav-tabs-custom">
            <ul class="nav nav-tabs">
                <li class="active">
                    <a href="#tabDetail" data-toggle="tab" data-tab-name="tabDetail">Equipment Detail</a>
                </li>
            </ul>
            <div class="tab-content">
                <div class="tab-pane active" id="tabDetail">
                    <div class="panel-group">
                        <div class="panel panel-default">
                            <div class="panel-body">
                                @Html.Partial("_AddOrUpdateEquipment", Model)
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


