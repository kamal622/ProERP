@using ProERP.Web.Framework.UI;

@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
    //Html.SetActiveMenuItemSystemName("FormulationRequestHistory");
}

<div ng-controller="HistroyController">
    <div class="content-header clearfix">
        <h1 class="pull-left">Formulation Request History</h1>
    </div>
    <div class="content">
        <div class="form-horizontal">
            <div class="row">
                <div class="col-md-12">
                    <div class="box box-primary">
                        <div class="box-header with-border">
                            <h3 class="box-title">Search</h3>
                            <div class="box-tools pull-right">
                                <button type="button" class="btn btn-box-tool" data-widget="collapse">
                                    <i class="fa fa-minus"></i>
                                </button>
                            </div>
                            <!-- /.box-tools -->
                        </div>
                        <div class="box-body" style="width: 100%; height: 100%;">
                            <!-- Main content -->
                            <div class="row">

                                <div class="col-md-1">
                                    <div class="label-wrapper">
                                        <label title="" class="control-label">Line</label>
                                        <div title="Line" class="ico-help" area-describedby="">
                                            <i class="fa fa-question-circle"></i>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-2">
                                    <jqx-drop-down-list jqx-auto-drop-down-height="true"
                                                        jqx-display-member="'Name'"
                                                        jqx-value-member="'Id'"
                                                        jqx-source="LineSource"
                                                        jqx-width="250"
                                                        jqx-height="30"
                                                        jqx-theme="theme"
                                                        jqx-instance="ddlLine"
                                                        jqx-on-binding-complete="onLineBindingComplete(event)" />
                                </div>

                                <div class="col-md-1">
                                    <div class="label-wrapper">
                                        <label title="" class="control-label">Date</label>
                                        <div title="Date" class="ico-help" area-describedby="">
                                            <i class="fa fa-question-circle"></i>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-2">
                                    <jqx-date-time-input jqx-instance="dtpSearchDate" 
                                                         jqx-width="200" 
                                                         jqx-height="30"
                                                         jqx-selection-mode="'range'" 
                                                         jqx-theme="theme" 
                                                         jqx-created="SearchDateCreated"></jqx-date-time-input>
                                </div>
                                <div class="col-md-3 text-right right">
                                    <button class="btn btn-primary btn-search" 
                                            style="margin-top:0px;height:30px;padding-top:3px;padding-bottom:3px;font-size:15px;" 
                                            id="searchSites" type="button" ng-click="onSearch(event)">
                                        <i class="fa fa-search"></i>
                                        Search
                                    </button>
                                </div>
                            </div>
                            <div class="row">
                                
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="pull-right pad">
                        <button id="btnRefresh" class="btn bg-blue" type="button" ng-click="onRefreshClick(event)">
                            <i class="fa fa-refresh"></i>
                            Refresh
                        </button>
                    </div> 
                    <jqx-grid id="GrdFormulationHistory" jqx-altrows="true" jqx-settings="GridSettings"  
                              jqx-sortable="true"  jqx-theme="theme" jqx-instance="GrdFormulationHistory" 
                              jqx-columns="[
                                            { text: 'Lot No', datafield: 'LotNo' ,width: 100 },
                                            { text: 'Grade Name', datafield: 'GradeName' },
                                            { text: 'Status', datafield: 'StatusName',width:130},
                                            { text: 'Color STD', datafield: 'ColorSTD',width: 150},
                                            { text: 'Request Date', datafield: 'CreateDate',width:100 ,cellsformat: 'dd/MM/yyyy'},
                                            { text: 'Request By', datafield: 'CreateBy',width:100 }
                                                ]"></jqx-grid>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts {
    <script type="text/javascript" src="~/js/FormulationRequest/FormulationHistoryController.js"></script>
}
