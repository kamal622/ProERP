
@model  ProERP.Web.Models.MaintenanceRequestViewModel
@using ProERP.Web.Framework.UI;

@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
    Html.SetActiveMenuItemSystemName("AuditTask");
}

<div ng-controller="ATController">
    <div class="content-header clearfix">
        <h1 class="pull-left">Audit Task </h1>
        <div class="pull-right">
            @*<button class="btn bg-red" ng-click="onDelete(event)">
                <i class="fa fa-trash-o"></i>
                Delete (selected)
            </button>*@
        </div>
    </div>
    <div class="content">
        <div class="form-horizontal">
            <div class="row">
                <div class="col-md-12">
                    <div class="box box-primary">
                        <div class="box-header with-border">
                            <h3 class="box-title">Search</h3>
                            <div class="box-tools pull-right">
                                <button type="button" class="btn btn-box-tool" data-widget="collapse">
                                    <i class="fa fa-minus"></i>
                                </button>
                            </div>
                            <!-- /.box-tools -->
                        </div>
                        <div class="box-body" style="width: 100%; height: 100%;">
                            <!-- Main content -->
                            <div class="row">

                                <div class="col-md-5">
                                    <div class="form-group">
                                        <div class="col-md-5">
                                            <div class="label-wrapper">
                                                <label title="" class="control-label">Machine Name</label>
                                                <div title="A machine name" class="ico-help" area-describedby="">
                                                    <i class="fa fa-question-circle"></i>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-7">
                                            <input name="SearchMachineName" ng-model="SearchMachineName" class="form-control text-box single-line" id="SearchMachineName" type="text" value="" width="50" />
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-5">
                                    <div class="form-group">
                                        <div class="col-md-5">
                                            <div class="label-wrapper">
                                                <label title="" class="control-label">Plant </label>
                                                <div title="A machine name" class="ico-help" area-describedby="">
                                                    <i class="fa fa-question-circle"></i>
                                                </div>
                                            </div>
                                        </div>
                                        @*<div class="col-md-7">
                                            @Html.DropDownListFor(m => m.PlantId, new SelectList(Model.Plants, "Id", "Name"), "All Plants"
                                       , new
                                       {
                                           jqx_drop_down_list = "ddlPlant",
                                           jqx_width = 200,
                                           jqx_height = 33,
                                           jqx_theme = "theme",
                                           jqx_instance = "ddlPlant",
                                           ng_model = "PlantModel",
                                           ng_change = "onSelect($event)"
                                       })
                                        </div>*@
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-5">
                                    <div class="form-group">
                                        <div class="col-md-5">
                                            <div class="label-wrapper">
                                                <label title="" class="control-label">Priority</label>
                                                <div title="Priority" class="ico-help" area-describedby="">
                                                    <i class="fa fa-question-circle"></i>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-7">
                                            <jqx-drop-down-list ng-model="model.PriorityId"
                                                                jqx-auto-drop-down-height="true"
                                                                jqx-display-member="'Description'"
                                                                jqx-value-member="'Id'"
                                                                jqx-source="PrioritySource"
                                                                jqx-width="200"
                                                                jqx-height="30"
                                                                jqx-theme="theme"
                                                                jqx-instance="Priorityinstance" />
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-5">
                                    <div class="form-group">
                                        <div class="col-md-5">
                                            <div class="label-wrapper">
                                                <label title="" class="control-label">Status</label>
                                                <div title="Status" class="ico-help" area-describedby="">
                                                    <i class="fa fa-question-circle"></i>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-7">
                                            <jqx-drop-down-list ng-model="model.StatusId"
                                                                jqx-auto-drop-down-height="true"
                                                                jqx-display-member="'Description'"
                                                                jqx-value-member="'Id'"
                                                                jqx-source="StatusSource"
                                                                jqx-width="200"
                                                                jqx-height="30"
                                                                jqx-theme="theme"
                                                                jqx-instance="Statusinstance" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-5">
                                    <div class="form-group">
                                        <div class="col-md-5">

                                        </div>
                                        <div class="col-md-7">
                                            <button class="btn btn-primary btn-search" id="searchMachines" type="button" ng-click="onSearch(event)">
                                                <i class="fa fa-search"></i>
                                                Search
                                            </button>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-7">

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="panel panel-default">
                    <div class="panel-body">
                        <div class="pull-right pad">
                            <button id="btnRefresh" class="btn bg-blue" type="button" ng-click="onRefreshClick(event)">
                                <i class="fa fa-refresh"></i>
                                Refresh
                            </button>
                        </div>
                        <jqx-grid jqx-instance="auditinstance"   jqx-width="'100%'" jqx-sortable="true" jqx-pageable="true"
                                  jqx-pagesize="10" jqx-pagesizeoptions="GridPageSizeOption" jqx-theme="theme"
                                  jqx-source="AT" jqx-settings="ATGrid" 
                                  jqx-columns="Gridcolumns" ></jqx-grid>
                    </div>
                        
                </div>
        </div>
    </div>
</div>
@section scripts {
    <script type="text/javascript" src="~/js/AuditTask/Listcontroller.js"></script>
}



