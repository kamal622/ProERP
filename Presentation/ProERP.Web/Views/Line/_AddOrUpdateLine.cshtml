
@model  ProERP.Web.Models.LineViewModel
@Html.HiddenFor(m => m.Id, new { id = "txtId" })
<div jqx-validator jqx-instance="LineValidator" jqx-hint-type="'label'" jqx-rules="Rules">
    <div class="form-group" ng-show="false">
        <div class="col-md-3">
            <div class="label-wrapper">
                <label title="" class="control-label">Site</label>
                <div title="A plant name" class="ico-help" area-describedby="">
                    <i class="fa fa-question-circle"></i>
                </div>
            </div>
        </div>
        <div class="col-md-9">
            <jqx-drop-down-list ng-model="model.SiteId"
                                jqx-width="300"
                                jqx-height="30"
                                jqx-auto-drop-down-height="true"
                                jqx-display-member="'Name'"
                                jqx-value-member="'Id'"
                                jqx-source="SiteSource"
                                jqx-instance="ddlSite"
                                jqx-selected-index="0"
                                jqx-disabled="DisableSiteList"
                                jqx-theme="theme"
                                jqx-on-change="onSiteChange(event)"
                                jqx-on-binding-complete="onSiteBindingComplete(event)"></jqx-drop-down-list>

        </div>
    </div>

    <div class="form-group">
        <div class="col-md-3">
            <div class="label-wrapper">
                <label title="" class="control-label">Plant</label>
                <div title="select plant" class="ico-help" area-describedby="">
                    <i class="fa fa-question-circle"></i>
                </div>
            </div>
        </div>
        <div class="col-md-9">
            <jqx-drop-down-list ng-model="model.PlantId"
                                jqx-width="300"
                                jqx-height="30"
                                jqx-auto-drop-down-height="true"
                                jqx-display-member="'Name'"
                                jqx-value-member="'Id'"
                                jqx-source="PlantSource"
                                jqx-instance="ddlPlantName"
                                jqx-auto-bind="true"
                                jqx-theme="theme"
                                jqx-on-binding-complete="onPlantBindingComplete(event)" 
                                id="dropPlantName"></jqx-drop-down-list>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-3">
            <div class="label-wrapper">
                <label title="" class="control-label">Line Name</label>
                <div title="A Line name" class="ico-help" area-describedby="">
                    <i class="fa fa-question-circle"></i>
                </div>
            </div>
        </div>
        <div class="col-md-9">

            @Html.TextBoxFor(m => m.Name, new { ng_model = "model.Name", style = "width:300px;", @class = "form-control" ,id="txtLineName" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-3">
            <div class="label-wrapper">
                <label title="" class="control-label">Line InCharge</label>
                <div title="Line incharge" class="ico-help" area-describedby="">
                    <i class="fa fa-question-circle"></i>
                </div>
            </div>
        </div>
        <div class="col-md-9">
            @Html.TextBoxFor(m => m.InCharge, new { ng_model = "model.InCharge", style = "width:300px;", @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-3">
            <div class="label-wrapper">
                <label title="" class="control-label">Location</label>
                <div title="Line incharge" class="ico-help" area-describedby="">
                    <i class="fa fa-question-circle"></i>
                </div>
            </div>
        </div>
        <div class="col-md-9">
            @Html.TextBoxFor(m => m.Location, new { ng_model = "model.Location", style = "width:300px;", @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-3">
            <div class="label-wrapper">
                <label title="" class="control-label">Is Active</label>
                <div title="Line is acive" class="ico-help" area-describedby="">
                    <i class="fa fa-question-circle"></i>
                </div>
            </div>
        </div>
        <div class="col-md-9">
            @Html.CheckBoxFor(m => m.IsActive, new { ng_model = "model.IsActive", @checked = "checked" })
        </div>
    </div>
</div>







