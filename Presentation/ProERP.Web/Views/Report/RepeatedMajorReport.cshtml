@using ProERP.Web.Framework.UI;
@model ProERP.Web.Models.RepeatedMajorReportModel

@{
    ViewBag.Title = "RepeatedMajorReport";
    Layout = "~/Views/Shared/_Layout.cshtml";
    Html.SetActiveMenuItemSystemName("RepeatedMajorReport");
}

<!-- Content Header (Page header) -->
<section class="content-header  clearfix">
    <h1>
        Repeated Breakdown Report
        <small>Preventive Mintenance</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Reports</li>
    </ol>
</section>
<div class="content">
    <div class="form-horizontal">
        <div class="row">
            <div class="col-md-12">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Search</h3>
                        <div class="box-tools pull-right">
                            <button type="button" class="btn btn-box-tool" data-widget="collapse">
                                <i class="fa fa-minus"></i>
                            </button>
                        </div>
                        <!-- /.box-tools -->
                    </div>
                    <div class="box-body" style="width: 100%; height: 100%;">
                        @using (Ajax.BeginForm("RepeatedMajorReport", new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "divRpt" }))
                        {
                            <!-- Main content -->
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">

                                        <div class="col-md-1">
                                            <div class="label-wrapper">
                                                <label title="" class="control-label" for="SearchSiteName">Year</label>
                                                <div title="select year" class="ico-help" area-describedby="">
                                                    <i class="fa fa-question-circle"></i>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-2">
                                            @Html.DropDownListFor(m => m.Year, new SelectList(Model.YearData), new
                                       {
                                           jqx_drop_down_list = "ddlYear",
                                           jqx_width = "200",
                                           jqx_height = "30",
                                           jqx_auto_drop_down_height = "false",
                                           jqx_instance = "ddlYear",
                                           jqx_selected_index = "0",
                                           jqx_theme = "theme"
                                       })
                                        </div>

                                        <div class="col-md-1">
                                            <div class="label-wrapper">
                                                <label title="" class="control-label" for="SearchSiteName">Month</label>
                                                <div title="select month" class="ico-help" area-describedby="">
                                                    <i class="fa fa-question-circle"></i>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-2">
                                            @Html.DropDownListFor(m => m.Month, new SelectList(Model.MonthData, "Id", "Name"), new
                                       {
                                           jqx_drop_down_list = "ddlMonth",
                                           jqx_width = "200",
                                           jqx_height = "30",
                                           jqx_auto_drop_down_height = "false",
                                           jqx_instance = "ddlMonth",
                                           jqx_theme = "theme"
                                       })
                                        </div>

                                        <div class="col-md-2">
                                            <button class="btn btn-primary" id="searchSites" type="submit">
                                                <i class="fa fa-search"></i>
                                                Search
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
        <div class="panel panel-default">
            <div id="divRpt" class="panel-body">
                @Html.Partial("_RdlcReportViewer", new ProERP.Web.Models.ReportViewModels { DataSetName = "DataSet1", ReportPath = Request.MapPath(Request.ApplicationPath) + @"Reports\RepeatedMajorReport.rdlc", ReportDataSource = Model.ReportDataSource })
            </div>
        </div>
    </div>
</div>

