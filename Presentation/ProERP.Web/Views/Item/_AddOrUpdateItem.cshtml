    <div class="form-group">
        <div class="col-md-3">
            <div class="label-wrapper">
                <label title="" class="control-label">MOC</label>
                <div title="MOC" class="ico-help" area-describedby="">
                    <i class="fa fa-question-circle"></i>
                </div>
            </div>
        </div>
        <div class="col-md-9">
            <jqx-input jqx-height="30"
                       jqx-width="200"
                       jqx-theme="theme"
                       ng-model="model.MOC"></jqx-input>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-3">
            <div class="label-wrapper">
                <label title="" class="control-label">Model</label>
                <div title="Model" class="ico-help" area-describedby="">
                    <i class="fa fa-question-circle"></i>
                </div>
            </div>
        </div>
        <div class="col-md-9">
            <jqx-input jqx-height="30"
                       jqx-width="200"
                       jqx-theme="theme"
                       ng-model="model.Model"></jqx-input>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-3">
            <div class="label-wrapper">
                <label title="" class="control-label">UOM</label>
                <div title="Unit of measure" class="ico-help" area-describedby="">
                    <i class="fa fa-question-circle"></i>
                </div>
            </div>
        </div>
        <div class="col-md-9">
            <jqx-input jqx-height="30"
                       jqx-width="200"
                       jqx-theme="theme"
                       ng-model="model.UnitOfMeasure"></jqx-input>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-3">
            <div class="label-wrapper">
                <label title="" class="control-label">Available Quantity</label>
                <div title="Available quantity" class="ico-help" area-describedby="">
                    <i class="fa fa-question-circle"></i>
                </div>
            </div>
        </div>
        <div class="col-md-9">
            <jqx-number-input jqx-height="30"
                              jqx-width="200"
                              jqx-theme="theme"
                              jqx-min="0"
                              jqx-input-mode="simple"
                              jqx-decimal-digits="0"
                              ng-model="model.AvailableQty"></jqx-number-input>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-3">
            <div class="label-wrapper">
                <label title="" class="control-label">Description</label>
                <div title="Description" class="ico-help" area-describedby="">
                    <i class="fa fa-question-circle"></i>
                </div>
            </div>
        </div>
        <div class="col-md-9">
            <jqx-text-area jqx-width="200"
                           jqx-height="80"
                           jqx-theme="theme"
                           ng-model="model.Description" />
        </div>
    </div>
<div class="form-group">
    <div class="col-md-3">
        <div class="label-wrapper">
            <label title="" class="control-label">Default Vendor</label>
            <div title="Vendor" class="ico-help" area-describedby="">
                <i class="fa fa-question-circle"></i>
            </div>
        </div>
    </div>
    <div class="col-md-9">
        <jqx-drop-down-list ng-model="model.VendorId"
                            jqx-auto-drop-down-height="false"
                            jqx-display-member="'Name'"
                            jqx-value-member="'Id'"
                            jqx-source="VendorSource"
                            style="width:100%;"
                            jqx-height="30"
                            jqx-theme="theme"
                            jqx-instance="dllVendorId" />
    </div>
</div>
