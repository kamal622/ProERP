@model  ProERP.Web.Models.IndentViewModel
    @Html.HiddenFor(m => m.ItemViewModel.Id, new { id = "hdnItemId" })
    <script type="text/javascript" src="~/JS/Item/AddOrUpdateController.js"></script>


    <div class="form-group">
        <div class="col-md-3">
            <div class="label-wrapper">
                <label title="" class="control-label">Item Name</label>
                <div title="Item name" class="ico-help" area-describedby="">
                    <i class="fa fa-question-circle"></i>
                </div>
            </div>
        </div>
        <div class="col-md-9">
            <jqx-input jqx-height="30"
                       jqx-width="200"
                       jqx-theme="theme"
                       ng-model="model.Name"></jqx-input>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-3">
            <div class="label-wrapper">
                <label title="" class="control-label">Item Code</label>
                <div title="Item code" class="ico-help" area-describedby="">
                    <i class="fa fa-question-circle"></i>
                </div>
            </div>
        </div>
        <div class="col-md-9">
            <jqx-input jqx-height="30"
                       jqx-width="200"
                       jqx-theme="theme"
                       ng-model="model.ItemCode"></jqx-input>
        </div>
    </div>
