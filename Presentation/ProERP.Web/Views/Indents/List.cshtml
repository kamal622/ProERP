@using ProERP.Web.Framework.UI;
@model  ProERP.Web.Models.IndentsViewModel


@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
    Html.SetActiveMenuItemSystemName("EngineeringPurchase");
}

<div ng-controller="IndentsController">
    <div class="content-header clearfix">
        <h1 class="pull-left">Indents</h1>
        <div class="pull-right">
            <a class="btn bg-blue" href="/Indents/Add/">
                <i class="fa fa-plus-square"></i>
                Add New
            </a>
            <button class="btn bg-red" ng-click="onDelete(event)">
                <i class="fa fa-trash-o"></i>
                Delete (selected)
            </button>
        </div>
    </div>
    <div class="content">
        <div class="form-horizontal">
            <div class="row">
                <div class="col-md-12">
                    <div class="box box-primary">
                        <div class="box-header with-border">
                            <h3 class="box-title">Search</h3>
                            <div class="box-tools pull-right">
                                <button type="button" class="btn btn-box-tool" data-widget="collapse">
                                    <i class="fa fa-minus"></i>
                                </button>
                            </div>
                            <!-- /.box-tools -->
                        </div>
                        <div class="box-body" style="width: 100%; height: 100%;">
                            <!-- Main content -->
                            
                            <div class="row">
                                <div class="col-md-5">
                                    <div class="form-group">
                                        <div class="col-md-5">

                                        </div>
                                        <div class="col-md-7">
                                            <button class="btn btn-primary btn-search" id="searchSites" type="button" ng-click="onSearch(event)">
                                                <i class="fa fa-search"></i>
                                                Search
                                            </button>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-7">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="panel panel-default">
                    <div class="panel-body">
                        <div class="pull-right pad">
                            <button id="btnRefresh" class="btn bg-blue" type="button" ng-click="onRefreshClick(event)">
                                <i class="fa fa-refresh"></i>
                                Refresh
                            </button>
                        </div>
                        <jqx-grid jqx-width="'100%'" jqx-sortable="true" jqx-pageable="true"
                                  jqx-pagesize="10" jqx-pagesizeoptions="GridPageSizeOption" jqx-theme="theme"
                                  jqx-source="Indents" jqx-settings="IndentsGrid" jqx-selection-mode="checkbox"
                                  jqx-columns="[
                                            { text: 'Indent No', datafield: 'IndentNo' },
                                            { text: 'Item Name', datafield: 'ItemName' },
                                            { text: 'Quantity In Stock', datafield: 'QtyInStock', width: 110 },
                                            { text: 'Quantity Needed', datafield: 'QtyNeeded',  width: 120 },
                                            { text: 'Unit Price', datafield: 'UnitPrice',  width: 120 },
                                            { text: 'Total Price', datafield: 'TotalAmount',  width: 140 },
                                            { text: 'Priority', datafield: 'PrioritytName',  width: 120 },

                                   { text: '', width: 70, cellsrenderer: UpdateIndent,sortable: false}]"> </jqx-grid>
                    </div>
            </div>
         </div>
      </div>
 </div>
 @section scripts {
 <script type="text/javascript" src="~/JS/Indents/ListController.js"></script>
     }
