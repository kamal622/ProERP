@using ProERP.Web.Framework.UI;
@model ProERP.Web.Models.PartViewModel

@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
    Html.SetActiveMenuItemSystemName("Parts");
}

<div ng-controller="PartController">
    <div class="content-header clearfix">
        <h1 class="pull-left">Parts</h1>
        <div class="pull-right">
            <a class="btn bg-blue" href="/Part/Add/">
                <i class="fa fa-plus-square"></i>
                Add New
            </a>
            <button class="btn bg-red" ng-click="onDelete(event)">
                <i class="fa fa-trash-o"></i>
                Delete (selected)
            </button>
        </div>
    </div>
    <div class="content">
        <div class="form-horizontal">
            <div class="row">
